@model Book
@{
    ViewData["Title"] = Model.Title;
    Layout = "_FormLayout";
}

<!--=================================
Breadcrumb -->
<div class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ol class="breadcrumb my-auto">
                    <li class="breadcrumb-item">  <i class='bx bx-home'></i> <a asp-action="Index">Go To List</a></li>
                    <li class="breadcrumb-item active"> <i class='bx bx-chevron-right'></i> <span> Book Details </span></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr class="m-0 custom">
<!--=================================
Breadcrumb -->


<!--=================================
Book Details -->
<section id="book_details">
    <div class="container">
        <div class="row">
            <div class="col-md-4 my-5">
                <img src="data:image\/*;base64,@(Convert.ToBase64String(Model.Image))" class="custom-shadow3 w-75 mx-auto img-thumbnail" alt="@Model.Title">
            </div>
            <div class="col-md-8 my-5">
                <div class="detail-content">
                    <div class="deatil-head d-flex justify-content-between">
                        <h1>@Model.Title</h1>
                        <h6 class="rate ml-3 d-flex justify-content-center align-items-center"><i class='bx bxs-star mr-2'></i> @Model.Rate.ToString("0.0")</h6>
                    </div>
                    <div class="detail-body">
                        <p>
                            @Model.Description
                        </p>

                        <div class="mt-5">
                            <a href="#" class="btn btn-primary custom-shadow2 mr-4">Buy @Model.Price$</a>
                            <a href="#" class="btn btn-warning custom-shadow2"><i class='bx bx-heart mr-1'></i> Add To Book Shelf</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h4 class="mt-5">Book Details:</h4>
        <div class="details-info border custom-shadow p-3 mt-4">
            <div class="row">
                <div class="col-md-3">
                    <b>Genre:</b>
                    <p class="text-muted">@Model.Genres.Name</p>
                </div>
                <div class="col-md-3">
                    <b>Price:</b>
                    <p class="text-muted">@Model.Price$</p>
                </div>
                <div class="col-md-3">
                    <b>Total Pages:</b>
                    <p class="text-muted">@Model.TotalPages</p>
                </div>
                <div class="col-md-3">
                    <b>Originally Published:</b>
                    <p class="text-muted">11/05/2021</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--=================================
Book Details -->
